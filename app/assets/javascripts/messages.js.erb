MutationObserver = window.MutationObserver || window.WebKitMutationObserver;

var observer = new MutationObserver(function(mutations, observer) {
  if ($("#message_group_back").length) {
    $("#message_group_back").click(function() {
      $('.message_group_box').show();
      $(".forma").remove()
      $("#message_group_back").remove()
    });
  };

  if ($('#message_group_back_create').length) {
    $('#message_group_back_create').click(function() {
      $('#message_group_create').show();
      $('.forma').remove();
      $('#message_group_back_create').remove();
    });
  };
});


observer.observe(document, {
  subtree: true,
  attributes: true
});



